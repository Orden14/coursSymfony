{% extends 'base.html.twig' %}

{% block title %}Créer une annonces{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Créer une annonce</h1>

        {{ form_errors(newAnnonceForm) }}

        {{ form_start(newAnnonceForm, {'attr': {'class': 'form-group'}}) }}
            <div class="form-group">
                {{ form_row(newAnnonceForm.title, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(newAnnonceForm.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(newAnnonceForm.price, {'attr': {'class': 'form-control'}})}}
            </div>
            <div class="form-group">
                {{ form_row(newAnnonceForm.image, {'attr': {'class': 'form-control'}})}}
            </div>

            <button type="submit" class="btn btn-primary cmargintop">Publier</button>
        {{ form_end(newAnnonceForm) }}
    </div>   
{% endblock %}
