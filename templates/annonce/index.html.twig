{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <a class="btn btn-primary mx-1 cmarginbottom" href="{{ path('app_index') }}">Créer une annonce</i></a>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {% for annonce in annonces %}
                <div class="col mb-5">
                    <div class="card h-100">
                        <img class="card-img-top" src="{{ asset('images/' ~ annonce.image) }}" alt="..." />
                            <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">{{ annonce.title }}</h5>
                                {{ annonce.price }} €
                            </div>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" href="#">Détails</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="btn btn-danger mt-auto" href="{{ path('app_annonce_delete', {'id': annonce.id}) }}">Supprimer</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
